<Addin author="F# Open Source Foundation (fsharp.org)" category="Language bindings" copyright="F# Open Source Foundation (fsharp.org)" description="F# Language Binding (for MonoDevelop 4.0.0.0). Install F# 3.0 before using." id="FSharpBinding" name="F# Language Binding" namespace="MonoDevelop" url="http://fsharp.github.com/fsharpbinding" version="3.2.14">
  <Runtime>
    <Import assembly="FSharp.Core.dll"/>
    <Import assembly="FSharp.CompilerBinding.dll"/>
    <Import assembly="FSharpBinding.dll"/>
    <Import assembly="FSharpBinding.Gui.dll"/>
    <Import file="templates.EmptyFSharpSource.xft.xml"/>
    <Import file="templates.EmptyFSharpScript.xft.xml"/>
    <Import file="templates.FSharpConsoleProject.xpt.xml"/>
    <Import file="templates.FSharpLibraryProject.xpt.xml"/>
    <Import file="templates.FSharpTutorialProject.xpt.xml"/>
    <Import file="templates.FSharpGtkProject.xpt.xml"/>
    <Import file="templates.AssemblyInfo.xft.xml"/>
    <Import file="templates.FSharpProjectMvc4Razor.xpt.xml"/>
    <Import file="templates.FSharpProjectMvc4Razor.windows.xpt.xml"/>
    <Import file="packages/AspNetMvc4/System.Web.Helpers.dll"/>
    <Import file="packages/AspNetMvc4/System.Web.Mvc.dll"/>
    <Import file="packages/AspNetMvc4/System.Web.Razor.dll"/>
    <Import file="packages/AspNetMvc4/System.Web.WebPages.Razor.dll"/>
    <Import file="packages/AspNetMvc4/System.Web.WebPages.dll"/>
  </Runtime>
  <Dependencies>
    <Addin id="Core" version="4.0"/>
    <Addin id="Ide" version="4.0"/>
    <Addin id="SourceEditor2" version="4.0"/>
    <Addin id="Refactoring" version="4.0"/>
  </Dependencies>
  <!-- This is the F# 2.0 targets file. This seems the best choice at the moment -->
  <!-- For Mono F# 3.0 and beyond, this targets file is also installed and it points to the F# 3.0 compiler -->
  <!-- New projects will be created with this targets file. When opened with Visual Studio 2012, it will ask for a project -->
  <!-- upgrade and replace with the F# 3.0 targets file. Project files with the F# 3.0 targets file will also work on Mono if F# 3.0 is -->
  <!-- available. -->
  
<Extension path="/MonoDevelop/ProjectModel/MSBuildItemTypes">
    <DotNetProject extension="fsproj" guid="{4925A630-B079-445d-BCD4-3A9C94FE9307}" import="$(MSBuildExtensionsPath32)\..\Microsoft F#\v4.0\Microsoft.FSharp.Targets" language="F#" resourceHandler="MonoDevelop.FSharp.FSharpResourceIdBuilder"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/GlobalOptionsDialog/Other">
    <Section _label="F# Settings" class="MonoDevelop.FSharp.FSharpSettingsPanel" id="FSharpSettings"/>
  </Extension>
  
<Extension path="/MonoDevelop/TypeSystem/Parser">
    <Parser class="MonoDevelop.FSharp.FSharpParser" mimeType="text/x-fsharp"/>
  </Extension>
  
<Extension path="/MonoDevelop/SourceEditor2/TooltipProviders">
    <Class class="MonoDevelop.FSharp.FSharpLanguageItemTooltipProvider" id="LanguageItem"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/TextEditorResolver">
    <Resolver class="MonoDevelop.FSharp.FSharpResolverProvider" mimeType="text/x-fsharp"/>
  </Extension>
  
<Extension path="/MonoDevelop/ProjectModel/SerializableClasses">
    <DataType class="MonoDevelop.FSharp.FSharpCompilerParameters"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/FileFilters">
    <FileFilter _label="F# Source Files" extensions="*.fs;*.fsi;*.fsx;*.fsscript" id="F#" insertbefore="AllFiles"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/FileTemplates">
    <FileTemplate file="templates.EmptyFSharpSource.xft.xml" id="EmptyFSharpSource"/>
    <FileTemplate file="templates.EmptyFSharpScript.xft.xml" id="EmptyFSharpScript"/>
    <FileTemplate file="templates.AssemblyInfo.xft.xml" id="FSharpAssemblyInfo"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/ProjectTemplates">
    <ProjectTemplate file="templates.FSharpConsoleProject.xpt.xml" id="FSharpConsoleProject"/>
    <ProjectTemplate file="templates.FSharpLibraryProject.xpt.xml" id="FSharpLibraryProject"/>
    <ProjectTemplate file="templates.FSharpTutorialProject.xpt.xml" id="FSharpTutorialProject"/>
    <ProjectTemplate file="templates.FSharpGtkProject.xpt.xml" id="FSharpGtkProject"/>
    <Condition id="Platform" value="windows">
      <ProjectTemplate file="templates.FSharpProjectMvc4Razor.windows.xpt.xml" id="FSharpMvc4Project"/>
    </Condition>
    <Condition id="Platform" value="!windows">
      <ProjectTemplate file="templates.FSharpProjectMvc4Razor.xpt.xml" id="FSharpMvc4Project"/>
    </Condition>
  </Extension>
  
<Extension path="/MonoDevelop/ProjectModel/SerializableClasses">
    <DataType class="MonoDevelop.FSharp.FSharpCompilerParameters"/>
    <DataType class="MonoDevelop.FSharp.FSharpProjectParameters"/>
  </Extension>
  
<Extension path="/MonoDevelop/ProjectModel/Gui/ItemOptionPanels/Build/Compiler">
    <Condition id="ActiveLanguage" value="F#">
      <Panel _label="Compiler" class="MonoDevelop.FSharp.CodeGenerationPanel" id="FSharpCodeGenerationPanel"/>
    </Condition>
  </Extension>
  
<Extension path="/MonoDevelop/ProjectModel/Gui/ItemOptionPanels/Build/General">
    <Condition id="ActiveLanguage" value="F#">
      <Panel _label="Build Order" class="MonoDevelop.FSharp.BuildOrderPanel" id="FSharpBuildOrderPanel"/>
    </Condition>
  </Extension>
  
<Extension path="/MonoDevelop/Core/StockIcons">
    <StockIcon resource="icons.fsharp-icon-32.png" stockid="md-fs-logo32"/>
    <StockIcon resource="icons.fsharp-script-32.png" stockid="md-fs-script32"/>
    <StockIcon resource="icons.fsharp-file-icon.png" stockid="md-fs-file"/>
    <StockIcon resource="icons.fsharp-script-icon.png" stockid="md-fs-script"/>
    <StockIcon resource="icons.fsharp-project-icon.png" stockid="md-fs-project"/>
  </Extension>
  
<Extension path="/MonoDevelop/Core/MimeTypes">
    <MimeType _description="F# Source File" icon="md-fs-file" id="text/x-fsharp" isText="true">
      <File pattern="*.fs"/>
    </MimeType>
    <MimeType _description="F# Script File" icon="md-fs-script" id="text/x-fsharp" isText="true">
      <File pattern="*.fsx"/>
    </MimeType>
    <MimeType _description="F# Script File" icon="md-fs-script" id="text/x-fsharp" isText="true">
      <File pattern="*.fsscript"/>
    </MimeType>
    <MimeType _description="F# Signature File" icon="md-fs-file" id="text/x-fsharp" isText="true">
      <File pattern="*.fsi"/>
    </MimeType>
  </Extension>
  
<Extension path="/MonoDevelop/ProjectModel/LanguageBindings">
    <LanguageBinding class="MonoDevelop.FSharp.FSharpLanguageBinding" id="F#" supportedextensions=".fs,.fsi,.fsx,.fsscript"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/TextEditorExtensions">
    <Class class="MonoDevelop.FSharp.FSharpTextEditorCompletion" fileExtensions=".fs,.fsi,.fsx,.fsscript"/>
  </Extension>
  
<Extension path="/MonoDevelop/ProjectModel/ProjectServiceExtensions">
    <Class class="MonoDevelop.FSharp.FSharpProjectServiceExtension"/>
  </Extension>
  
  <!-- F# interactive -->
  
<Extension path="/MonoDevelop/Ide/Pads">
    <Pad _label="F# Interactive" class="MonoDevelop.FSharp.FSharpInteractivePad" defaultLayout="*" defaultPlacement="Bottom" icon="md-fs-project" id="MonoDevelop.FSharp.FSharpInteractivePad"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/Pads/ProjectPad">
    <NodeBuilder class="MonoDevelop.FSharp.FSharpProjectFileNodeExtension"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/Commands">
    <Category _name="F# Integration" id="F# Integration">
      <Command _description="Show F# Interactive pad." 
        _label="F# Interactive" 
        defaultHandler="MonoDevelop.FSharp.ShowFSharpInteractive" 
        id="MonoDevelop.FSharp.FSharpCommands.ShowFSharpInteractive" 
        macShortcut="Meta|Control|F" 
        shortcut="Control|Alt|F" 
        type="check"/>
      <Command _description="Send the selected text to F# Interactive" 
        _label="Send selection to F# Interactive" 
        defaultHandler="MonoDevelop.FSharp.SendSelection" 
        id="MonoDevelop.FSharp.FSharpCommands.SendSelection" 
        macShortcut="Ctrl|Return" 
        shortcut="Ctrl|Return"/>
      <Command _description="Send the current line to F# Interactive" 
        _label="Send line to F# Interactive" 
        defaultHandler="MonoDevelop.FSharp.SendLine" 
        id="MonoDevelop.FSharp.FSharpCommands.SendLine" 
        macShortcut="Meta|Control|L" 
        shortcut="Ctrl|Alt|L"/>
      <Command _description="Send the current project references to F# Interactive" 
        _label="Send references to F# Interactive" 
        defaultHandler="MonoDevelop.FSharp.SendReferences" 
        id="MonoDevelop.FSharp.FSharpCommands.SendReferences" 
        macShortcut="Meta|Control|P" 
        shortcut="Ctrl|Alt|P"/>
    </Category>
  </Extension>
  
<Extension path="/MonoDevelop/SourceEditor2/ContextMenu/Editor">
    <CommandItem id="MonoDevelop.FSharp.FSharpCommands.SendSelection"/>
    <CommandItem id="MonoDevelop.FSharp.FSharpCommands.SendLine"/>
    <CommandItem id="MonoDevelop.FSharp.FSharpCommands.SendReferences"/>
  </Extension>
  
<Extension path="/MonoDevelop/Ide/MainMenu/Edit">
    <CommandItem id="MonoDevelop.FSharp.FSharpCommands.SendSelection"/>
    <CommandItem id="MonoDevelop.FSharp.FSharpCommands.SendLine"/>
    <CommandItem id="MonoDevelop.FSharp.FSharpCommands.SendReferences"/>
  </Extension>
</Addin>